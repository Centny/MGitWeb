<?xml version="1.0" encoding="UTF-8"?>
<project name="MGitWeb" default="toJ4A" basedir=".">
	<property environment="env" />
	<property name="deploy.dir" value="./build" />
	<property name="deploy.f" value="${deploy.dir}/${ant.project.name}.war" />
	<property name="app.dir" value="." />
	<property name="build.dir" value="${app.dir}/build" />
	<property name="dest.dir" value="${build.dir}/cls" />
	<property name="web.dir" value="${app.dir}/WebContent" />
	<!-- the server library,no necessary copy to WEB-INF/lib -->
	<property name="lib.dir" value="${env.J4A_LIB_HOME}" />
	<!-- the web library -->
	<property name="wlib.dir" value="${app.dir}/WebContent/WEB-INF/lib" />

	<target name="MGitWeb.war" description="Build the web application archive">
		<delete dir="${dest.dir}" />
		<mkdir dir="${dest.dir}" />
		<javac includeantruntime="true" srcdir="${app.dir}/../JGitExt/src" destdir="${dest.dir}">
			<classpath>
				<fileset dir="${lib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${wlib.dir}">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
			<exclude name="**/*Test.java" />
		</javac>
		<javac includeantruntime="true" srcdir="${app.dir}/src" destdir="${dest.dir}">
			<classpath>
				<fileset dir="${lib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${wlib.dir}">
					<include name="**/*.jar" />
				</fileset>
				<path path="${dest.dir}" />
			</classpath>
			<exclude name="**/*Test.java" />
		</javac>
		<copy todir="${dest.dir}">
			<fileset dir="${app.dir}/src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
		<delete file="${deploy.dir}/${ant.project.name}.war" />
		<war warfile="${deploy.dir}/${ant.project.name}.war" webxml="${web.dir}/WEB-INF/web.xml">
			<fileset dir="${web.dir}" />
			<classes dir="${dest.dir}" />
		</war>
	</target>

	<target name="toJ4A" depends="MGitWeb.war">
		<delete file="${deploy.dir}/${ant.project.name}.j4a" />
		<exec executable="/usr/local/bin/war2j4a">
			<arg value="${deploy.f}" />
			<env key="DX_HOME" value="/Applications/adt-bundle-mac/sdk/build-tools/android-4.2.2/" />
		</exec>
	</target>
</project>