<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<servlet>
		<servlet-name>GitServlet</servlet-name>
		<servlet-class>org.centny.mgw.servlet.MGitServlet</servlet-class>
		<init-param>
			<param-name>base-path</param-name>
			<param-value>$(REPO_DIR)</param-value>
		</init-param>
		<init-param>
			<param-name>export-all</param-name>
			<param-value>0</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>RepoMgr</servlet-name>
		<servlet-class>org.centny.mgw.servlet.RepoMgrServlet</servlet-class>
		<init-param>
			<param-name>base-path</param-name>
			<param-value>$(REPO_DIR)</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>AMerge</servlet-name>
		<servlet-class>org.centny.mgw.servlet.AMergeServlet</servlet-class>
		<init-param>
			<param-name>base-path</param-name>
			<param-value>$(SYNC_WS)</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>RepoMgr</servlet-name>
		<url-pattern>/repo/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AMerge</servlet-name>
		<url-pattern>/amerge/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GitServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<!-- security configure -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Git</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>git</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Repo</web-resource-name>
			<url-pattern>/repo/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
		<security-constraint>
		<web-resource-collection>
			<web-resource-name>AMerge</web-resource-name>
			<url-pattern>/amerge/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>MGitRealm</realm-name>
	</login-config>
</web-app>